{
  "name": "@fabric/faucet",
  "version": "0.2.0-dev",
  "description": "playnet faucet",
  "main": "services/bitfaucet.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/FabricLabs/faucet.git"
  },
  "scripts": {
    "build": "npm run build:fomantic && npm run build:app",
    "build:app": "rollup -c",
    "build:fomantic": "cd libraries/fomantic && npx gulp build && cp -r dist/themes ../../assets && cd ../..",
    "build:semantic": "npm run build:fomantic",
    "debug": "react-scripts start",
    "dev": "npx concurrently \"npm run watch\" \"npm start\"",
    "eject": "react-scripts eject",
    "start": "node scripts/node.js",
    "test": "mocha tests",
    "serve": "concurrently \"npm run webpack-server-browser\" \"node scripts/node.js\"",
    "server": "npm run webpack-server-browser & npm run webpack-node",
    "watch": "rollup -c -w",
    "webpack-server-browser": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ./webpack.config.js --hot --port 8081",
    "webpack-node": "./node_modules/webpack/bin/webpack.js --config ./webpack.server.config.js --progress --watch"
  },
  "keywords": [
    "bitcoin",
    "maki",
    "fabric",
    "faucet",
    "bitfaucet",
    "example",
    "money"
  ],
  "author": "Fabric Labs",
  "license": "MIT",
  "dependencies": {
    "bitcoinjs-lib": "^6.0.0"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.7.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "concurrently": "^7.1.0",
    "file-loader": "^6.2.0",
    "fomantic-ui": "^2.8.8",
    "fomantic-ui-css": "^2.8.8",
    "lodash.merge": "^4.6.2",
    "mocha": "^9.2.0",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.8",
    "react": "^18.2.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.1",
    "react-scripts": "^4.0.3",
    "rollup": "^2.74.1",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-import-css": "^3.0.3",
    "rollup-plugin-node-globals": "^1.4.0",
    "semantic-ui-react": "^2.0.4"
  },
  "peerDependencies": {
    "@fabric/core": "FabricLabs/fabric#feature/node-16",
    "@fabric/http": "FabricLabs/fabric-http#feature/node-16"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

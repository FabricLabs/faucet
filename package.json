{
  "name": "@fabric/faucet",
  "version": "0.2.0-dev",
  "description": "bitcoin faucet",
  "main": "services/bitfaucet.js",
  "bin": "scripts/node.js",
  "scripts": {
    "build": "npm run build:fomantic && npm run build:app",
    "build:app": "react-scripts build && cp -r build/* assets",
    "build:nix": "node2nix --nodejs-12 --input package.json --lock package-lock.json",
    "build:fomantic": "cd libraries/semantic && gulp build && cd ../../",
    "clean": "npm run clean:lock && npm run clean:node",
    "clean:lock": "rm -rf package-lock.json",
    "clean:node": "rm -rf node_modules",
    "debug": "react-scripts start",
    "eject": "react-scripts eject",
    "start": "node scripts/node.js",
    "test": "mocha tests"
  },
  "keywords": [
    "bitcoin",
    "maki",
    "fabric",
    "faucet",
    "bitfaucet",
    "example",
    "money"
  ],
  "author": "Eric Martindale",
  "license": "MIT",
  "dependencies": {
    "@fabric/core": "FabricLabs/fabric#feature/federation",
    "@fabric/http": "FabricLabs/fabric-http#feature/federation",
    "bitcoinjs-lib": "^6.0.0",
    "ecpair": "^2.0.1",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "fomantic-ui-css": "^2.8.8",
    "mocha": "^9.2.0",
    "node2nix": "^1.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.1",
    "react-scripts": "4.0.3",
    "semantic-ui-react": "^2.0.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
